{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build before debug",
      "command": "C:/MinGW/bin/g++.exe",
      "args": [
        "-g",
        "${fileBasename}",
        "-o",
        "${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}